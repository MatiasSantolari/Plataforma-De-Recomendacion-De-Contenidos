@model List<Plataforma_De_Recomendacion_De_Contenido.Models.Pelicula>;

<div class="card">
    <div class="card-header">
        <h5> Lista de Peliculas </h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Pelicula" asp-route-ContenidoId="0">Crear Nuevo</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Sinopsis</th>
                    <th>Pais</th>
                    <th>Director</th>
                    <th>Año de Lanzamiento</th>
                    <th>Duracion en minutos</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Sinopsis</td>
                        <td>@item.Pais</td>
                        <td>@item.Director</td>
                        <td>@item.AnoLanzamiento</td>
                        <td>@item.DuracionMinutos</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Pelicula" asp-route-idPelicula="@item.ContenidoId"> Editar </a>
                        </td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="GetPelicula" asp-controller="Pelicula" asp-route-idPelicula="@item.ContenidoId"> Ver Informacion </a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Pelicula" asp-route-idPelicula="@item.ContenidoId"> Eliminar </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
