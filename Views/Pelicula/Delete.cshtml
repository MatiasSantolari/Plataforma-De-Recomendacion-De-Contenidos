@model Plataforma_De_Recomendacion_De_Contenido.Models.ViewModels.PeliculaVM;

<h3 class="text-danger">¿Esta seguro que desea eliminar esta Pelicula?</h3>
<hr />

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Delete" asp-controller="Pelicula" method="post">
            <input type="hidden" asp-for="ContenidoId" />
            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre Pelicula</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Sinopsis">Sinopsis</label>
                <input class="form-control form-control-sm" asp-for="Sinopsis" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="AnoLanzamiento">Año de Lanzamiento</label>
                <input class="form-control form-control-sm" asp-for="AnoLanzamiento" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Director">Director</label>
                <input class="form-control form-control-sm" asp-for="Director" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="DuracionMinutos">Duracion en minutos</label>
                <input class="form-control form-control-sm" asp-for="DuracionMinutos" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Pais">Pais</label>
                <input class="form-control form-control-sm" asp-for="Pais" type="text" />
            </div>
            <p>Géneros: @string.Join(", ", Model.GenerosDisponibles.Where(g => Model.GenerosSeleccionados.Contains(int.Parse(g.Value))).Select(g => g.Text))</p>
            <div class="mb-2">
                <button class=" btn btn-primary btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Pelicula">Volver</a>
            </div>
        </form>
    </div>
</div>