@model Plataforma_De_Recomendacion_De_Contenido.Models.Usuario;

<h3 class="text-danger">¿Esta seguro que desea eliminar este Usuario?</h3>
<hr />

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Delete" asp-controller="Usuario" method="post">
            <input type="hidden" asp-for="UsuarioId" />
            <div class="mb-2">
                <label class="form-label" asp-for="NombreUsuario">Nombre de Usuario</label>
                <input class="form-control form-control-sm" asp-for="NombreUsuario" type="text" disabled />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Nacionalidad">Nacionalidad</label>
                <input class="form-control form-control-sm" asp-for="Nacionalidad" type="text" disabled />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="FechaNacimiento">Fecha de Nacimiento</label>
                <input class="form-control form-control-sm" asp-for="FechaNacimiento" type="text" disabled />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Email">Email</label>
                <input class="form-control form-control-sm" asp-for="Email" type="text" disabled/>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Rol">Rol</label>
                <input class="form-control form-control-sm" asp-for="Rol" type="text" disabled/>
            </div>
            <div class="mb-2">
                <button class=" btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Usuario">Volver</a>
            </div>
        </form>
    </div>
</div>
